<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Lof_MarketPlace::marketplace" title="Lof Seller">
                    <resource id="Lof_MarketPlace::seller" title="Sellers" sortOrder="10">
                        <resource id="Lof_MarketPlace::seller_edit" title="Edit Seller" sortOrder="10" />
                        <resource id="Lof_MarketPlace::seller_save" title="Save Seller" sortOrder="20" />
                        <resource id="Lof_MarketPlace::seller_delete" title="Delete Seller" sortOrder="30" />
                        <resource id="Lof_MarketPlace::seller_enable" title="Enable Seller" sortOrder="40" />
                        <resource id="Lof_MarketPlace::seller_disable" title="Disable Seller" sortOrder="50" />
                    </resource>
                    <resource id="Lof_MarketPlace::commission" title="Commission" sortOrder="20">
                        <resource id="Lof_MarketPlace::commission_edit" title="Edit Commission" sortOrder="10" />
                        <resource id="Lof_MarketPlace::commission_save" title="Save Commission" sortOrder="20" />
                        <resource id="Lof_MarketPlace::commission_delete" title="Delete Commission" sortOrder="30" />
                    </resource>
                    <resource id="Lof_MarketPlace::group" title="Groups" sortOrder="30">
                        <resource id="Lof_MarketPlace::group_edit" title="Edit Group" sortOrder="10" />
                        <resource id="Lof_MarketPlace::group_save" title="Save Group" sortOrder="20" />
                        <resource id="Lof_MarketPlace::group_delete" title="Delete Group" sortOrder="30" />
                    </resource>
                    <resource id="Lof_MarketPlace::catalog" title="Catalog" sortOrder="40" >
                        <resource id="Lof_MarketPlace::sellerproduct" title="Product" sortOrder="40" />
