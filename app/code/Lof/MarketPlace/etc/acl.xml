                        <resource id="Lof_MarketPlace::payment_edit" title="Edit Payment" sortOrder="10" />
                        <resource id="Lof_MarketPlace::payment_save" title="Save Payment" sortOrder="20" />
                        <resource id="Lof_MarketPlace::payment_delete" title="Delete Payment" sortOrder="30" />
                    </resource>
                    <resource id="Lof_MarketPlace::withdrawal" title="Withdrawal" sortOrder="120" />
                    <resource id="Lof_MarketPlace::reviewrating" title="Review" sortOrder="130" />
                    <resource id="Lof_MarketPlace::review" title="Review" sortOrder="125" />
                    <resource id="Lof_MarketPlace::rating" title="Rating" sortOrder="140" />
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Lof_MarketPlace::config_seller" title="Seller" />
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>