                    <resource id="Lof_MarketPlace::sales" title="Sales" sortOrder="50">
                        <resource id="Lof_MarketPlace::order" title="Orders" sortOrder="50"/>
                        <resource id="Lof_MarketPlace::transaction" title="Orders Transaction" sortOrder="60"/>
